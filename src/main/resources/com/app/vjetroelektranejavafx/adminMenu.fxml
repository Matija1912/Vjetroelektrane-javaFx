<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="menuVBox" alignment="CENTER" prefHeight="28.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.vjetroelektranejavafx.MenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <MenuBar fx:id="menuBar" prefHeight="38.0" prefWidth="574.0" style="-fx-background-color: transparent;">
        <menus>
            <Menu mnemonicParsing="false" text="Updates log">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#credentialsUpdatesLog" text="credentials updates" />
               <MenuItem mnemonicParsing="false" onAction="#locationsUpdatesLog" text="locations updates" />
               <MenuItem mnemonicParsing="false" onAction="#turbinesUpdatesLog" text="turbines updates" />
                </items>
            </Menu>
         <Menu mnemonicParsing="false" text="List">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#listUsers" text="users" />
               <MenuItem mnemonicParsing="false" onAction="#listTurbines" text="turbines" />
               <MenuItem mnemonicParsing="false" onAction="#listLocations" text="locations" />
            </items>
         </Menu>
            <Menu mnemonicParsing="false" text="Add">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#addNewUser" text="Add users" />
               <MenuItem mnemonicParsing="false" onAction="#addNewAdmin" text="Add admins" />
                    <MenuItem mnemonicParsing="false" onAction="#addNewTurbine" text="Add turbines" />
                </items>
            </Menu>
         <Menu mnemonicParsing="false" text="Delete">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#deleteCredentials" text="Delete users" />
            </items>
         </Menu>
            <Menu mnemonicParsing="false" text="Logout">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#logout" text="Logout" />
                </items>
            </Menu>
         <Menu mnemonicParsing="false" text="Reset credentials">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#resetPassword" text="Reset password" />
               <MenuItem mnemonicParsing="false" onAction="#resetUsername" text="Reset username" />
            </items>
         </Menu>
        </menus>
    </MenuBar>
</VBox>
